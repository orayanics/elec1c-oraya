@model IEnumerable<Instructor>;

<a asp-action="Add" class="btn btn-primary">Add Instructor</a>

<table class="table">

    <tr>
        <th colspan="7">Instructor</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>Tenure</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Details</td>
        <td>Update</td>
        <td>Delete</td>

    </tr>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.FirstName @instructor.LastName</td>
                @{
                    if (instructor.IsTenured)
                    {
                        <td>Permanent</td>
                    }
                    else
                    {
                    <td>Probationary</td>
                    }
                }
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate.Date.ToShortDateString()</td>
            <td><a asp-action="ShowDetail" asp-route-id="@instructor.Id" class="btn btn-primary">Show Details</a></td>
            <td><a asp-action="Update" asp-route-id="@instructor.Id" class="btn btn-primary">Update Details</a></td>
            <td><a asp-action="Delete" asp-route-id="@instructor.Id" class="btn btn-danger">Delete</a></td>

        </tr>
    }
</table>