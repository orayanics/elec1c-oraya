@model Instructor;

<div><h2>Update Instructor</h2></div>

<form asp-action="Update">
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Last Name</label>
        <input asp-for="LastName" class="form-control">
    </div>


    <div class="mb-3">
        <p>Position</p>
        <div class="form-check">
            <input asp-for="IsTenured" type="radio" name="istenured" value="true" class="form-check-input"/>
            <label asp-for="IsTenured" class="form-label" class="form-check-label">Permanent</label>
        </div>
        <div class="form-check">
            <input asp-for="IsTenured" type="radio" name="istenured" value="false" class="form-check-input" />
            <label asp-for="IsTenured" class="form-label" class="form-check-label">Probationary</label>
        </div>
    </div>

    <label asp-for="Rank" class="form-label">Rank</label>
    <select asp-for=Rank class="form-select" aria-label="Select rank">
        <option selected value="">Select</option>
        <option value="Instructor">Instructor</option>
        <option value="AssistantProfessor">AssistantProfessor</option>
        <option value="AssociateProfessor">AssociateProfessor</option>
        <option value="Professor">Professor</option>
    </select>
    @*     <select class="form-select-sm" asp-for="Course" asp-items="Html.GetEnumSelectList(typeof(Course))"></select>
    *@

    <div class="mb-3">
        <label asp-for="HiringDate" class="form-label">Hiring Date</label>
        <input asp-for="HiringDate" type="date" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
