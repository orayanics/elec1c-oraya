@model IEnumerable<Student>;

<a asp-action="Add" class="btn btn-primary">Add Student</a>

<table class="table">

    <tr>
        <th colspan="8">Student</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>Course</td>
        <td>Admission Date</td>
        <td>Email</td>
        <td>GPA</td>
        <td>Details</td>
        <td>Update</td>
        <td>Delete</td>
    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.Course</td>
            <td>@student.AdmissionDate.ToShortDateString()</td>
            <td>@student.Email</td>
            <td>@student.GPA</td>
            <td><a asp-action="ShowDetail" asp-route-id="@student.Id" class="btn btn-primary">Show Details</a></td>
            <td><a asp-action="Update" asp-route-id="@student.Id" class="btn btn-primary">Update Student</a></td>
            <td><a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger">Delete</a></td>

        </tr>
    }
</table>